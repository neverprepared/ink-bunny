# LangFuse Environment Configuration
# Copy to .env and generate your own secrets

# =============================================================================
# SECRETS - Generate your own values!
# =============================================================================

# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=<generate-with-openssl-rand-hex-32>
NEXTAUTH_SECRET=<generate-with-openssl-rand-hex-32>

# Generate with: openssl rand -hex 16
SALT=<generate-with-openssl-rand-hex-16>

# Generate secure passwords (24+ chars recommended)
POSTGRES_PASSWORD=<generate-secure-password>
CLICKHOUSE_PASSWORD=<generate-secure-password>
REDIS_PASSWORD=<generate-secure-password>
MINIO_PASSWORD=<generate-secure-password>

# =============================================================================
# CONFIGURATION
# =============================================================================

# URLs
NEXTAUTH_URL=http://localhost:3000

# Telemetry (set to true to help LangFuse improve)
TELEMETRY_ENABLED=false

# =============================================================================
# OPTIONAL: Auto-create initial user/project
# Uncomment and configure to skip manual setup
# =============================================================================

# LANGFUSE_INIT_ORG_NAME=MyOrg
# LANGFUSE_INIT_PROJECT_NAME=default
# LANGFUSE_INIT_USER_EMAIL=admin@example.com
# LANGFUSE_INIT_USER_NAME=Admin
# LANGFUSE_INIT_USER_PASSWORD=changeme123
